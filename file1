//    Variables globales de la hoja de cálculo. Editado por última vez el 24 de diciembre de 2024

const hoja_de_calculo                 = SpreadsheetApp.getActiveSpreadsheet();

const nombre_hoja_empresas            = "Empresas";
const nombre_hoja_acciones            = "acciones";
const nombre_hoja_acciones_expediente = "acciones_expediente";

