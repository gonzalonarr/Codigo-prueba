const hoja_acciones                   = hoja_de_calculo.getSheetByName(nombre_hoja_acciones);
const hoja_acciones_expediente        = hoja_de_calculo.getSheetByName(nombre_hoja_acciones_expediente);

var numero_filas_hoja_empresas              = hoja_empresas.getLastRow();
var numero_filas_hoja_acciones_expediente   = hoja_acciones_expediente.getLastRow();

var columna_acciones_expediente__comunicacion_app = 21;
